@model SGITO_OBRAS.Service.Model.Login
@{
    ViewBag.Title = "Iniciar Sesión";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    body {
        background-color: #003341;
    }
</style>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="alert alert-danger alert-dismissable" style="display:none" id="errorMessage">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <div class="form-top">
            <div class="form-top-left">
                <h3>BIENVENIDO</h3>
                <p>Ingrese su Usuario y Password para Acceder:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="form-bottom">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
            {

                <div class="form-group">
                    <label class="sr-only" for="form-username">Usuario</label>
                    @Html.TextBoxFor(model => model.usuario, new { @class = "form-control ", @placeholder = "Dominio\\Usuario...", @required = true })
                    @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="sr-only" for="form-password">Password</label>
                    @Html.PasswordFor(model => model.contraseña, new { @type = "password", @name = "form-password", @class = "form-password form-control", @id = "form-password", @placeholder = "Password...", @required = true })
                    @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn " value="Iniciar Sesión">Iniciar Sesión</button>
            }
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        var m = '@ViewData["Error"]';

        if (m.length > 1) {
            $("#errorMessage").append('<strong><center>' + m + '</center></strong>');
            $(this).addClass('input-error');
            $("#errorMessage").show();

        }
    });

</script>
