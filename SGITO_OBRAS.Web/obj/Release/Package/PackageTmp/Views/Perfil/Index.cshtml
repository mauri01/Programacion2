@{
    ViewBag.Title = "Perfiles";
}
<div class="content-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-telefonica">
                <div class="panel-heading">
                    <h3 class="panel-title">Perfil Usuarios</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @{
                                string error = (TempData["Error"] ?? string.Empty) as string;
                                if (!string.IsNullOrEmpty(error))
                                {
                                    <div class="alert alert-danger fade in" role="alert">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span>
                                        @error
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <table id="myDataTable" class="table display">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Perfil</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <a id="btn-nuevo" class="btn btn-telefonica">Nuevo</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Eliminar Instalacion -->
<div id="eliminarModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Perfil</h4>
            </div>
            @using (Html.BeginForm("Delete", "Perfil", FormMethod.Post))
            {
                <div class="modal-body">
                    <div id="eliminarContenido" class="row">
                        <input type="hidden" id="idEliminar" name="perfilId" class="form-control" />
                        <div class="col-md-12">
                            <div class="alert alert-warning" role="alert">
                                <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                <span class="sr-only">Cuidado:</span>
                                El perfil <b id="descripcionEliminar"></b> será eliminado ¿Continuar?
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Aceptar</button>
                    <button type="button" class="btn btn-black" data-dismiss="modal">Cerrar</button>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Perfil/index.js"></script>

