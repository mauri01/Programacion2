@model SGITO_OBRAS.Entity.Usuario
@{
    ViewBag.Title = "Editar - Usuario";
}
<div class="content-fluid">
    <div class="col-md-12" style="margin-bottom: 40px;">
        <div class="panel panel-telefonica">
            <div class="panel-heading">
                <h3 class="panel-title">Editar Usuario</h3>
            </div>
            @using (Html.BeginForm("Edit", "Usuario", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.usuarioId)   
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @{
                                string error = (ViewData["Error"] ?? string.Empty) as string;
                                if (!string.IsNullOrEmpty(error))
                                {
                                    <div class="alert alert-danger fade in" role="alert">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span>
                                        @error
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div id="crearContenido" class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="ured">Usuario Red</label>
                                    @Html.TextBoxFor(m => m.usuarioRed, new { @id = "usuarioRed", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.usuarioRed)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="dominio">Dominio</label>
                                    @Html.TextBoxFor(m => m.dominio, new { @id = "dominio", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.dominio)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="nombre">Nombre y Apellido</label>
                                    @Html.TextBoxFor(m => m.nombreApellido, new { @id = "nombreApellido", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.nombreApellido)

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="perfil">Perfil</label>
                                    @Html.DropDownList("perfilId", null, "Seleccione...", new { @id = "perfil", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.perfilId)
                                    @Html.ValidationMessageFor(m => m.perfil) 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="email">E-Mail</label>
                                    @Html.TextBoxFor(m => m.email, new { @id = "email", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.email)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="tipoDoc">Tipo Documentos</label>
                                    @Html.DropDownList("tipoDocumento", null, "Seleccione...", new { @id = "tipoDocumentos", @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="doc">Nro. Documento</label>
                                    @Html.TextBoxFor(m => m.nroDocumento, new { @id = "nroDocumento", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.nroDocumento)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-1">@Html.ActionLink("Volver", "Index", "Usuario", new { @class = "btn btn-black" })</div>
                        <div class="col-md-1 pull-right">
                            <button type="submit" class="btn btn-telefonica">Guardar</button>
                        </div>
                    </div>
                </div>
                                }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        });
    });
</script>



